// Variable - these are basic text-replacement structures.
//  EX:  theme = $name
//  EX:  message = "Hello, " $name ", and goodbye!"
//  EX:  settings = $white_foreground
$name = "Zooce Dark"
$white_foreground = {
    foreground = $colors.white
}

// Variable Set
//  EX:  "editor.foreground" = $colors.red
$colors = (
    black = #2b2b2b
    white = #f2f2f2
    red = #ff0000
)

// Variable Object

// Variable Function
//  EX:  tokenColors = [
//           $scope_def("comment.line", $foreground($colors.red))
//       ]
$scope_def(scope, settings) = {
    scope = $scope
    settings = $settings
}
$foreground(value) = {
    foreground = $value
}

// Key-Value Pairs
"$schema" = vscode://schemas/color-theme
name = Zooce Dark
type = Dark
colors = {
    "editor.foreground" = $colors.white
    "editor.background" = $colors.black
}
tokenColors = [
    {
        scope = "punctuation.definition.arguments"
        settings = {
            foreground = $colors.white
        }
    }
    $scope_def("punctuation.definition.type", $foreground($colors.red))
    {
        scope = string
        settings = {
            foreground = $colors.black
        }
    }
    {
        scope = support
        settings = $foreground($colors.red)
    }
]
